<h2>Enter the name of your survey:</h2>

<form action="/survey_post" method="post">
  <label for="survey_title">Survey name:</label>
  <input id="survey_title" name="survey_title" type="text" placeholder='My Survey'>
  <button type="submit" class="btn btn-primary">Create Survey</button>
</form>

<% if @all_surveys.any?() do %>
  <h4>Surveys already created:</h4>
  <h5>Click to edit</h5>
  <ul>
    <% @all_surveys.each() do |survey| %>
      <li><%= survey.title() %></li>
    <% end %>
  </ul>
  <% end %>
<% else %>
  <h4>Your surveys will appear here</h4>
<% end %>
